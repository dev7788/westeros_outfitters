<h1><%= @name.capitalize %></h1>
<div class="thumbnail">
  <a href="/items">Back to Items</a>
</div>
<p>
<%@items.each do |item| %>
    <div class="caption bottom-align">
      <ul class="rig columns-3">
        <li>
          <img class ="index-image" src="<%=item.img%>" alt="...">
          <%= item.name%>
          <br>
          <%= number_to_currency(item.price) %>
          <br>
          <%= item.description%>
          <p><%= button_to "Add to Cart", cart_path(id: item.id), class: "button btn"%></p>
        </li>
      </ul>
    </div>
  <%end %>
</p>
