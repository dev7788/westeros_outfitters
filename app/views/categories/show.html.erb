<h1 class="banner home">
  <strong class="banner-content"><%= @name.capitalize %></strong>
</h1>
  <div class="col-xs-offset-3 col-xs-6 text-center">
  <div class="thumbnail">
    <strong><a href="/items">Back to Items</a></strong>
  </div>
</div>
</div>
<p>
  <ul class="row transparent">
    <% @items.each do |item| %>
      <li class="item col-md-3 col-xs-6">
        <img class="index-image img-responsive center-block" src="<%= item.img %>" alt="...">
        <h4><strong><%= link_to item.name, item_path(item) %></strong></h4>
        <br>
        <%= number_to_currency(item.price) %>
        <br></br>
        <div class="item-description">
          <p><%= item.description %></p>
        </div>
        <br>
        <h4><%= link_to "Item Retired", item_path(item), class: "bottom-right" if item.retired %></h4>
        <%= button_to "Add to Cart", cart_path(id: item.id), class: "button btn bottom-right" unless item.retired %>
      </li>
    <% end %>
  </ul>
</p>
