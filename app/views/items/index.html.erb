<h2>All Items</h2>
<div class="thumbnail">
<%@categories.each do |category| %>
<a href="/<%=category.name%>"><%= category.name.capitalize%>|</a>
<%end %>
</div>


<p>
<%@items.each do |item| %>
  <div class="caption bottom-align">
    <ul class="rig columns-3">
      <li>
        <img class ="index-image" src="<%=item.img%>" alt="...">
        <strong><%= item.name%></strong>
        <br>
        <%= number_to_currency(item.price) %>
        <br>
        <%= item.description%>
        <h4><strong><%=link_to "Item Retired",item_path(item.id) if item.retired%></strong></h4>
        <p><%= button_to "Add to Cart", cart_path(id: item.id), class: "button btn" unless item.retired%></p>
      </li>
    </ul>
  </div>
<% end %>
</p>
