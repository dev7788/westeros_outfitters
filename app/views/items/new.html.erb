<%= flash.now[:error] %>
<%= flash[:notice] %>

<h1> Create an Item </h1>

<%= form_for @item do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br>
  <%= f.label :img %>
  <%= f.text_field :img %>
  <br>
  <%= f.label :category_id %>
  <%= f.text_field :category_id %>
  <%= f.submit "Create Item" %>
<% end %>
