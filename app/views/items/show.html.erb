<div class="col-xs-offset-3 col-sm-offset-4 col-xs-6 col-md-4 col-lg-6 text-center col-centered">
    <div class="thumbnail">
    <strong><a href="/items">Back to All Items</a></strong>
  </div>
  <h2><%= @item.name %></h2>
</div>

<div class="categories-nav">
  <div class="col-xs-offset-3 col-sm-offset-4 col-xs-6 col-md-9 col-lg-6 col-centered">
    <div class="thumbnail">
      <div class="caption bottom-align">
<p>
  <br>
  <img src='<%= @item.img %>' class="show-image"/>
  <br></br>
    <%= number_to_currency(@item.price) %>
      <br></br>
    <%= @item.description %>
  <%= button_to "Add to Cart", cart_path(id: @item.id), class: "button btn" unless @item.retired%>
</p>
</div>
</div>
